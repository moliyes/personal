# Makefile for vaspkit

MAKE = make
AR = ar
include ../../make.inc

#-------------------------------------------------------------------------------------------------
# Src and Libs
#-------------------------------------------------------------------------------------------------
SRC = shermo.f90

OBJ = $(SRC:.f90=.o)
EXE = shermo.exe
#-------------------------------------------------------------------------------------------------
# Suffix rules
#-------------------------------------------------------------------------------------------------
.SUFFIXES: .o .f90
.f90.o:
	$(FC) $(FFLAGS) -c $<

#-------------------------------------------------------------------------------------------------
# Targets
#-------------------------------------------------------------------------------------------------
shermo.exe: $(OBJ)
	$(FC) $(FFLAGS) -o $(EXE) $(OBJ)
	rm *.o

clean:
	rm -f *.mod *.a
	rm -f $(OBJ) $(EXE)
